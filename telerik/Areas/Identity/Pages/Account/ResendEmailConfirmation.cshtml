@page
@model ResendEmailConfirmationModel

@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-3">@ViewData["Title"]</h2>
        <p class="text-center text-muted mb-4">Enter your email to resend the confirmation link.</p>

        <form method="post">
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
