@model IEnumerable<telerik.Models.ProductSalesViewModel>

@{
    ViewBag.Title = "Product Sales Summary";
    var orderProducts = ViewBag.OrderProductList as List<telerik.Models.OrderProductViewModel>;
}

<h2>Order Details</h2>

@if (orderProducts != null && orderProducts.Any())
{
    <table class="table table-striped table-bordered mb-5">
        <thead class="table-dark">
            <tr>
                <th>Customer Name</th>
                <th>Order Date</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Total Price (€)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var op in orderProducts)
            {
                <tr>
                    <td>@op.CustomerName</td>
                    <td>@op.OrderDate.ToString("dd-MM-yyyy")</td>
                    <td>@op.ProductName</td>
                    <td>@op.Quantity</td>
                    <td>@op.TotalPrice.ToString("F2")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr style="font-weight: bold;">
                <td colspan="4" style="text-align:right;">Total Revenue:</td>
                <td>@ViewBag.TotalRevenue.ToString("F2") €</td>
            </tr>
        </tfoot>
    </table>

    <h2 class="mb-2">Stock</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Units In Stock</th>
                <th>Units Sold</th>
                <th>Stock Left</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitsInStock</td>
                    <td>@item.UnitsSold</td>
                    <td style="color:@(item.StockLeft < 5 ? "red" : "inherit")">@item.StockLeft</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-info">
        No order details available.
    </div>
}
